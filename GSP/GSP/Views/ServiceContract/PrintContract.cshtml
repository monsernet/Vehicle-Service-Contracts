                                <tr>
                                    <td class="label-en">Customer:</td>
                                    <td class="text-center"><strong>@ViewBag.CustomerName</strong></td>
                                    <td class="label-ar text-end">العميل:</td>
                                </tr>
                                <tr>
                                    <td class="label-en">TELEPHONE NO & ADRESS:</td>
                                    <td class="text-center"><strong>@ViewBag.CustomerPhone (<small> @ViewBag.CustomerAddress </small>)</strong></td>
