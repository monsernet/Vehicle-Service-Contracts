                                        <input type="hidden" class="form-control" value="@ViewBag.PackageCaption" name="SC_PackageCaption" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row m-2">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Starting Mileage</label>
                                <input type="text" class="form-control" value="@Model.StartMileage" id="StartMileageCaption" readonly />
