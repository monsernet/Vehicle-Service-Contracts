@{

    ViewData["Title"] = "Edir Service Contract";
    var rowCount = 0;
    decimal totalServiceCost = 0;
    decimal totalCost = 0;
    decimal allCosts = 0;
    decimal totalAdditinalPartsCost = 0;
}

<div class="container-fluid">
