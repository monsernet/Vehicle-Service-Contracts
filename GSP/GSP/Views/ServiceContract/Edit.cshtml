                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Ending Mileage</label>
                                    <input type="text" class="form-control" value="@Model.EndMileage" id="EndMileageCaption" readonly />
                                    @*  @Html.TextBoxFor(m => m.EndMileage, new { @class = "form-control", value="@ViewBag.SC_endingMileage"  }) *@
                                <input type="hidden" class="form-control" value="@Model.EndMileage" name="EndMileage" id="EndMileage" required="required" />
