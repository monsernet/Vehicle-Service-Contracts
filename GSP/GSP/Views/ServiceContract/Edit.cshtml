                                <div class="form-group">
                                    <label class="form-label">Contract Expiry Date</label>
                                    <input type="date" class="form-control" name="ExpiryDate" id="SC_ContractExpiryDate" value="@Model.ExpiryDate.ToString("yyyy-MM-dd")" required="required" readonly />
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>






