@model GSP.Models.ViewModels.AddGeniumPartRequest
@{
    ViewData["Title"] = "Add New Service Part";
}

<div class="container py-3">
   
    <form method="post">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.PartNumber, "Part Number")
                    @Html.TextBoxFor(m => m.PartNumber, new { @class = "form-control", required="required" })
                    @Html.ValidationMessageFor(m => m.PartNumber)
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.PartName, "Part Number")
                    @Html.TextBoxFor(m => m.PartName, new { @class = "form-control", required="required" })
                    @Html.ValidationMessageFor(m => m.PartName)
                </div>
            </div>

            <div class="col-sm-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.UnitPrice, "Unit Price")
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.UnitPrice, "{0:F3}", new { @class = "form-control", type="number", step = "0.001",  required="required" })
                        <div class="input-group-append">
                            <span class="input-group-text"> KD</span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.UnitPrice)
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group">
                    @Html.LabelFor(m => m.QtyPerSet, "Qty per Set")
                    @Html.TextBoxFor(m => m.QtyPerSet, new { @class = "form-control", type="number", step = "1", required="required" })
                    @Html.ValidationMessageFor(m => m.QtyPerSet)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.VehicleId, "Select Vehicle")
                    @Html.DropDownListFor(m => m.VehicleId, (IEnumerable<SelectListItem>)ViewBag.Vehicles, "Select a Vehicle", new { @class = "form-control" , required="required" })
                    @Html.ValidationMessageFor(m => m.VehicleId)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.VehicleTypeId, "Select Vehicle Type")
                    @Html.DropDownListFor(m => m.VehicleTypeId, (IEnumerable<SelectListItem>)ViewBag.VehicleTypes, "Select a Vehicle", new { @class = "form-control" , required="required" })
                    @Html.ValidationMessageFor(m => m.VehicleTypeId)
                </div>
            </div>
            
        </div>
        <div class="row d-sm-flex justify-content-center mt-3 ">
            <button type="submit" class="btn btn-sm btn-primary col-sm-6"><i class="fa fa-plus"></i> Add Service Part</button>
        </div>

    </form>
</div>