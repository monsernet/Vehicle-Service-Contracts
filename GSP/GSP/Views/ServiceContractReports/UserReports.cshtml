@model List<GSP.Models.ViewModels.UserReportViewModel>

@{
    ViewData["Title"] = "Service Contract Reports by User";
}

<div class="container">
    @foreach (var userReport in Model)
    {
        <div class="card  border border-primary mb-3">
            <div class="card-header bg-primary border-primary">
                @userReport.UserName
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Report Type</th>
                            <th>Number of Service Contracts</th>
                            <th>Total Amount</th>
                            @* <th>Action</th> *@
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Daily</td>
                            <td>@userReport.DailyReportsCount contracts</td>
                            <td>@userReport.DailyTotalAmount.ToString("F3") KD</td>
                            @* <td><a href="@userReport.DailyReportsLink">View Details</a></td> *@
                        </tr>
                        <tr>
                            <td>Weekly</td>
                            <td>@userReport.WeeklyReportsCount contracts</td>
                            <td>@userReport.WeeklyTotalAmount.ToString("F3") KD</td>
                           @*  <td><a href="@userReport.WeeklyReportsLink">View Details</a></td> *@
                        </tr> 
                        <tr>
                            <td>Monthly</td>
                            <td>@userReport.MonthlyReportsCount contracts</td>
                            <td>@userReport.MonthlyTotalAmount.ToString("F3") KD</td>
                            @* <td><a href="@userReport.MonthlyReportsLink">View Details</a></td> *@
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>