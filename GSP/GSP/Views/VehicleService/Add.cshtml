@model GSP.Models.ViewModels.AddVehicleServiceRequest
@{
    ViewData["Title"] = "Add New Service Rate";
}

<div class="container py-3">
    <form method="post">
        <div class="row">
            <div class="col-sm-8">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, "Designation")
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required="required" })
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
           
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.Cost, "Service Cost")
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Cost, "{0:F3}", new { @class = "form-control", type="number", step = "0.001",  required="required" })
                        <div class="input-group-append">
                            <span class="input-group-text"> KD</span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(m => m.Cost)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.VehicleId, "Select Vehicle")
                    @Html.DropDownListFor(m => m.VehicleId, (IEnumerable<SelectListItem>)ViewBag.Vehicles, "Select a Vehicle", new { @class = "form-control" , required="required" })
                    @Html.ValidationMessageFor(m => m.VehicleId)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.VehicleTypeId, "Select Type")
                    @Html.DropDownListFor(m => m.VehicleTypeId, (IEnumerable<SelectListItem>)ViewBag.VehicleTypes, "Select a Vehicle Type", new { @class = "form-control" , required="required" })
                    @Html.ValidationMessageFor(m => m.VehicleTypeId)
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(m => m.MileageId, "Select Mileage")
                    @Html.DropDownListFor(m => m.MileageId, (IEnumerable<SelectListItem>)ViewBag.Mileages, "Select a Mileage", new { @class = "form-control" , required="required" })
                    @Html.ValidationMessageFor(m => m.MileageId)
                </div>
            </div>
        </div>
        <div class="row d-sm-flex justify-content-center mt-3 ">
            <button type="submit" class="btn btn-sm btn-primary col-sm-6"><i class="fa fa-plus"></i> Add Service Rate</button>
        </div>

    </form>
</div>