@model List<GSP.Models.ViewModels.SearchVehicle>
@{
    ViewData["Title"] = "Vehicle Service | Serach a Vehicle";
}


<div class="container py-3">
    <div class="row d-flex justify-content-center my-4">
        <div class="col-6">
            
            <form id="searchForm" action="@Url.Action("SearchVehicle", "VehicleService")" method="post" class="d-flex align-items-center">
                <label class="form-label col-2">Search :</label>
                <input id="name" type="text" name="str" class="form-control col-6 mx-2" />
                <button class="btn btn-sm btn-primary m-1 col-3"  type="submit">Search Vehicle</button>
            </form>
        </div>
    </div>


    <div id="searchResults" class="d-flex justify-content-center">
        @await Html.PartialAsync("_SearchResults", Model)
    </div>
   
</div>