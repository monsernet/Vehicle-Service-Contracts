@model GSP.Models.ViewModels.AddVehicleRequest
@{
    ViewData["Title"] = "Add New Vehicle";
}


<div class="container py-3">
    <form method="post">
        
        <div class="form-group">
            @Html.LabelFor(m => m.Name, "Designation")
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required="required" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.BrandId, "Select Brand")
            @Html.DropDownListFor(m => m.BrandId, (IEnumerable<SelectListItem>)ViewBag.Models, "Select a Brand", new { @class = "form-control", required="required" })
            @Html.ValidationMessageFor(m => m.BrandId)
        </div>
        <div class="row d-sm-flex justify-content-center mt-3 ">
            <button type="submit" class="btn btn-sm btn-primary col-sm-6"><i class="fa fa-plus"></i> Add Vehicle</button>
        </div>
    </form>
</div>
