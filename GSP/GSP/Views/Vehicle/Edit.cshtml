@model GSP.Models.ViewModels.EditVehicleRequest
@{
    ViewData["Title"] = "Edit Vehicle";
}


<div class="container py-3"> 
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["AlertMessage"]
        </div>
    }
    <form method="post">
       
        <!-- Validation summary to show all errors at the top -->
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">Designation</label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <div class="form-group">
            <label asp-for="BrandId">Select Brand</label>
            <select asp-for="BrandId" asp-items="@Model.Brands" class="form-control" required>
                <option value="">-- Select Brand --</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

       
        
        <input type="hidden" asp-for="Id" />
        <div class="row d-sm-flex justify-content-center mt-3 ">
            <button type="submit" class="btn btn-sm btn-primary col-sm-6"><i class="fa fa-retweet"></i>Save Changes</button>
        </div>
    </form>
</div>