@model List<GSP.Models.Domain.Mileage>
@{
    ViewData["Title"] = "List of Mileages";
}

<div class="container py-3">
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered" id="mileageTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <td>Name</td>
                    <td>Mileage Value (Km)</td>
                     @if (User.IsInRole("Admin")) {
                    <td></td>
                     }
                </tr>
            </thead>
            <tbody>
                @foreach (var mileage in Model)
                {
                    <tr>
                        <td>@mileage.Id</td>
                        <td>@mileage.Name</td>
                        <td>@mileage.MileageValue</td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-area=""
                                asp-controller="Mileage"
                                asp-action="Edit"
                                asp-route-id="@mileage.Id"> Edit</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Mileages Found</p>
    }
</div>