@model GSP.Models.ViewModels.AddMileageRequest
@{
    ViewData["Title"] = "Add New Mileage";
}

<div class="container py-3">
    <form method="post">
        <div class="form-group">
            <label class="form-label">Designation</label>
            <input type="text" class="form-control" id="name" asp-for="Name" required />
        </div>

        <div class="form-group">
            <label class="form-label">Mileage Value (Km)</label>
            <div class="input-group">
                <input type="number" class="form-control" id="mileagevalue" asp-for="MileageValue" required step="0.001" min="0" />
                <div class="input-group-append">
                    <span class="input-group-text">Km</span>
                </div>
            </div>
        </div>


        <div class="row d-sm-flex justify-content-center mt-3">
            <button class="btn btn-sm btn-primary col-sm-6 " type="submit"><i class="fa fa-plus"></i> Add Mileage</button>
        </div>
    </form>
</div>
